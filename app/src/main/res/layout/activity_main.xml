<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      tools:context="com.okmichaels.aufbauchecker.MainActivity">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Candidate Information"
          android:textSize="18sp"
          android:padding="16dp"/>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout_exam_number"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginTop="8dp">
          <EditText
              android:id="@+id/exam_number"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/exam_number"/>
      </android.support.design.widget.TextInputLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:baselineAligned="false"
          android:layout_marginTop="8dp">

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout_exam_year"
          android:layout_height="wrap_content"
          android:layout_width="0dp"
          android:layout_weight="0.5">
          <EditText
              android:id="@+id/exam_year"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/exam_year" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout_exam_type"
          android:layout_height="wrap_content"
          android:layout_width="0dp"
          android:layout_weight="0.5">
          <EditText
              android:id="@+id/exam_type"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/exam_type"/>
      </android.support.design.widget.TextInputLayout>

      </LinearLayout>


      <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout_card_serial"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginTop="8dp">
          <EditText
              android:id="@+id/card_serial"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/card_serial"/>
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout_card_pin"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginTop="8dp">
          <EditText
              android:id="@+id/card_pin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/card_pin"/>
      </android.support.design.widget.TextInputLayout>
      <Button
          android:id="@+id/check_result"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimaryDark"
          android:textColor="@android:color/white"
          android:text="@string/check_result"
          android:shadowRadius="0.4"
          android:layout_marginTop="8dp"
          />

  </LinearLayout>
